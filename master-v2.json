{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "vmCount_str": {
            "type": "string",
            "defaultValue": "1"
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "sAdmin"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_E2as_v4",
            "allowedValues": [
                "Standard_D2s_v4",
                "Standard_D4s_v4",
                "Standard_D2as_v4",
                "Standard_D4as_v4",
                "Standard_E2s_v4",
                "Standard_E4s_v4",
                "Standard_E8s_v4",
                "Standard_E2as_v4",
                "Standard_E4as_v4",
                "Standard_E8as_v4",
                "Standard_B2s",
                "Standard_B2ms"
            ]
        },
        "vmSRVOS": {
            "type": "string",
            "defaultValue": "2019-Datacenter-smalldisk-g2",
            "allowedValues": [
                "2008-R2-SP1-smalldisk",
                "2012-Datacenter-smalldisk",
                "2012-R2-Datacenter-smalldisk-g2",
                "2016-Datacenter-smalldisk",
                "2016-datacenter-smalldisk-g2",
                "2016-Datacenter-Server-Core-smalldisk-g2",
                "2019-Datacenter-smalldisk",
                "2019-Datacenter-smalldisk-g2",
                "2019-Datacenter-Core-smalldisk-g2",
                "2022-datacenter-smalldisk-g2"
            ]
        },
        "vmClientOS": {
            "type": "string",
            "defaultValue": "win11-21h2-ent",
            "allowedValues": [
                "win11-21h2-ent",
                "20h2-ent-g2",
                "20h1-ent-g2",
                "19h2-ent-g2",
                "rs5-enterprise-g2",
                "rs3-pro",
                "win7-enterprise"
            ]
        },
        "license": {
            "type": "string",
            "defaultValue": "Windows_Server",
            "allowedValues" : [
                "Windows_Server",
                "Windows_Client"
            ]
        },
        "vmOffer": {
            "type": "string",
            "defaultValue": "WindowsServer",
            "allowedValues": [
                "WindowsServer",
                "Windows-11",
                "Windows-10",
                "Windows-7"
            ]
        },
        "vmOSversion": {
            "type": "string",
            "defaultValue": "latest"
        },
        "storageType": {
            "type": "string",
            "defaultValue": "StandardSSD_LRS",
            "allowedValues": [
                "Standard_LRS",
                "StandardSSD_LRS",
                "Premium_LRS"
            ]
        },
        "vNetName": {
            "type": "string"
        },
        "VNetSubnetName": {
            "type": "string",
            "defaultValue": "Subnet1"
        },
        "acceleratedNetworking": {
            "type": "bool",
            "defaultValue": false,
            "allowedValues": [
                false,
                true
            ]
        },
        "autoShutdownTime": {
            "type": "string",
            "defaultValue": "2300",
            "allowedValues": [
                "None",
                "1730",
                "2200",
                "2300",
                "2330"
            ]
        },
        "NeedsAZ": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "No",
                "Yes"
            ]
        },
        "AvailabilityZone": {
            "type": "string",
            "defaultValue": "1",
            "allowedValues": [
                "1",
                "2",
                "3"
            ]
        },
        "DomainJoin": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "No",
                "Yes"
            ]
        },
        "DomainToJoin": {
            "type": "string",
            "defaultValue": "None",
            "metadata": {
                "description": "Only needed if DomainJoin is Yes"
            }
        },
        "DomainJoinUserName": {
            "type": "string",
            "defaultValue": "None",
            "metadata": {
                "description": "Only needed if DomainJoin is Yes"
            }
        },
        "DomainJoinPassword": {
            "type": "securestring",
            "defaultValue": "None",
            "metadata": {
                "description": "Only needed if DomainJoin is Yes"
            }
        }
    },
    "variables": {
        "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vNetName'), parameters('VNetSubnetName'))]",
        "templates": {
            "serverURI": "https://raw.githubusercontent.com/SeanGreenbaum/Azure-VMCompute/newUI/vmdeploy-v2.json",
            "azserverURI": "https://raw.githubusercontent.com/SeanGreenbaum/Azure-VMCompute/newUI/vmazdeploy-v2.json",
            "azclientURI": "https://raw.githubusercontent.com/SeanGreenbaum/Azure-VMCompute/newUI/vmclientazdeploy-v2.json",
            "clientURI": "https://raw.githubusercontent.com/SeanGreenbaum/Azure-VMCompute/newUI/vmclientdeploy-v2.json"
        },
        "TimeZone": "Eastern Standard Time",
        "vmCount": "[int(parameters('vmCount_str'))]",
        "vmOS": "[if(equals(parameters('license'), 'Windows_Server'), parameters('vmSRVOS'), parameters('vmClientOS'))]",
        "vmPublisher": "[if(equals(parameters('license'), 'Windows_Server'), 'MicrosoftWindowsServer', 'MicrosoftWindowsDesktop')]"

    },
    "resources": [
        {
            "condition": "[equals(parameters('NeedsAZ'), 'No')]",
            "apiVersion": "2021-04-01",
            "name": "[if(equals(variables('vmCount'), 1), concat('linked-vm-', parameters('vmName')), concat('linked-vm-', parameters('vmName'), copyIndex(1)))]",
            "type": "Microsoft.Resources/deployments",
            "copy": {
                "name": "vmloop",
                "count": "[variables('vmCount')]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').serverURI]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[if(equals(variables('vmCount'), 1), parameters('vmName'), concat(parameters('vmName'), copyIndex(1)))]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "vmOS": {
                        "value": "[variables('vmOS')]"
                    },
                    "vmOSversion": {
                        "value": "[parameters('vmOSversion')]"
                    },
                    "vmPublisher": {
                        "value": "[variables('vmPublisher')]"
                    },
                    "vmOffer": {
                        "value": "[parameters('vmOffer')]"
                    },
                    "subnetRef": {
                        "value": "[variables('subnetRef')]"
                    },
                    "acceleratedNetworking": {
                        "value": "[parameters('acceleratedNetworking')]"
                    },
                    "storageType": {
                        "value": "[parameters('storageType')]"
                    },
                    "autoShutdownTime": {
                        "value": "[parameters('autoShutdownTime')]"
                    },
                    "licensetype": {
                        "value": "[parameters('license')]"
                    },
                    "timeZone": {
                        "value": "[variables('timeZone')]"
                    },
                    "DomainJoin": {
                        "value": "[parameters('DomainJoin')]"
                    },
                    "DomainToJoin": {
                        "value": "[parameters('DomainToJoin')]"
                    },
                    "DomainJoinUserName": {
                        "value": "[parameters('DomainJoinUserName')]"
                    },
                    "DomainJoinPassword": {
                        "value": "[parameters('DomainJoinPassword')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "condition": "[equals(parameters('NeedsAZ'), 'Yes')]",
            "apiVersion": "2021-04-01",
            "name": "[if(equals(variables('vmCount'), 1), concat('linked-vmaz-', parameters('vmName')), concat('linked-vmaz-', parameters('vmName'), copyIndex(1)))]",
            "type": "Microsoft.Resources/deployments",
            "copy": {
                "name": "vmloop",
                "count": "[variables('vmCount')]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').azserverURI]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[if(equals(variables('vmCount'), 1), parameters('vmName'), concat(parameters('vmName'), copyIndex(1)))]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "vmOS": {
                        "value": "[variables('vmOS')]"
                    },
                    "vmOSversion": {
                        "value": "[parameters('vmOSversion')]"
                    },
                    "vmPublisher": {
                        "value": "[variables('vmPublisher')]"
                    },
                    "vmOffer": {
                        "value": "[parameters('vmOffer')]"
                    },
                    "subnetRef": {
                        "value": "[variables('subnetRef')]"
                    },
                    "acceleratedNetworking": {
                        "value": "[parameters('acceleratedNetworking')]"
                    },
                    "storageType": {
                        "value": "[parameters('storageType')]"
                    },
                    "autoShutdownTime": {
                        "value": "[parameters('autoShutdownTime')]"
                    },
                    "licensetype": {
                        "value": "[parameters('license')]"
                    },
                    "timeZone": {
                        "value": "[variables('timeZone')]"
                    },
                    "AzZone": {
                        "value": "[parameters('AvailabilityZone')]"
                    },
                    "DomainJoin": {
                        "value": "[parameters('DomainJoin')]"
                    },
                    "DomainToJoin": {
                        "value": "[parameters('DomainToJoin')]"
                    },
                    "DomainJoinUserName": {
                        "value": "[parameters('DomainJoinUserName')]"
                    },
                    "DomainJoinPassword": {
                        "value": "[parameters('DomainJoinPassword')]"
                    }
                }
            },
            "dependsOn": []
        }
    ],
    "outputs": {}
}