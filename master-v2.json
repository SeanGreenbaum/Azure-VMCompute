{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "vmCount_str": {
            "type": "string",
            "defaultValue": "1"
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "sAdmin"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_E2as_v4",
            "allowedValues": [
                "Standard_D2s_v4",
                "Standard_D4s_v4",
                "Standard_D2as_v4",
                "Standard_D4as_v4",
                "Standard_E2s_v4",
                "Standard_E4s_v4",
                "Standard_E8s_v4",
                "Standard_E2as_v4",
                "Standard_E4as_v4",
                "Standard_E8as_v4",
                "Standard_B2s",
                "Standard_B2ms"
            ]
        },
        "vmOS": {
            "type": "string",
            "defaultValue": "2019-Datacenter-smalldisk-g2",
            "allowedValues": [
                "2008-R2-SP1-smalldisk",
                "2012-Datacenter-smalldisk",
                "2012-R2-Datacenter-smalldisk-g2",
                "2016-Datacenter-smalldisk",
                "2016-datacenter-smalldisk-g2",
                "2016-Datacenter-Server-Core-smalldisk-g2",
                "2019-Datacenter-smalldisk",
                "2019-Datacenter-smalldisk-g2",
                "2019-Datacenter-Core-smalldisk-g2",
                "2022-datacenter-smalldisk-g2",
                "win11-21h2-ent",
                "20h2-ent-g2",
                "20h1-ent-g2",
                "19h2-ent-g2",
                "rs5-enterprise-g2",
                "rs3-pro",
                "win7-enterprise"
            ]
        },
        "vmOSversion": {
            "type": "string",
            "defaultValue": "latest"
        },
        "storageType": {
            "type": "string",
            "defaultValue": "StandardSSD_LRS",
            "allowedValues": [
                "Standard_LRS",
                "StandardSSD_LRS",
                "Premium_LRS"
            ]
        },
        "vNetName": {
            "type": "string"
        },
        "VNetSubnetName": {
            "type": "string",
            "defaultValue": "Subnet1"
        },
        "acceleratedNetworking": {
            "type": "bool",
            "defaultValue": false,
            "allowedValues": [
                false,
                true
            ]
        },
        "autoShutdownTime": {
            "type": "string",
            "defaultValue": "2300",
            "allowedValues": [
                "None",
                "1730",
                "2200",
                "2300",
                "2330"
            ]
        },
        "NeedsHA": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "No",
                "AvailabilitySet",
                "AvailabilityZone"
            ]
        },
        "AVSetAction": {
            "type": "string",
            "defaultValue": "Existing",
            "allowedValues": [
                "Existing",
                "New"
            ]
        },
        "AVSetName":{
            "type": "string",
            "defaultValue": "None"
        },
        "AvailabilityZone": {
            "type": "string",
            "defaultValue": "1",
            "allowedValues": [
                "1",
                "2",
                "3"
            ]
        },
        "DomainJoin": {
            "type": "string",
            "defaultValue": "No",
            "allowedValues": [
                "No",
                "Yes"
            ]
        },
        "DomainToJoin": {
            "type": "string",
            "defaultValue": "None",
            "metadata": {
                "description": "Only needed if DomainJoin is Yes"
            }
        },
        "DomainJoinUserName": {
            "type": "string",
            "defaultValue": "None",
            "metadata": {
                "description": "Only needed if DomainJoin is Yes"
            }
        },
        "DomainJoinPassword": {
            "type": "securestring",
            "defaultValue": "None",
            "metadata": {
                "description": "Only needed if DomainJoin is Yes"
            }
        },
        "CustomBranch": {
            "type": "string",
            "defaultValue": "master",
            "metadata": {
                "description": "Advanced option. Do not change unless intentional."
            }
        }
    },
    "variables": {
        "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vNetName'), parameters('VNetSubnetName'))]",
        "githubURL": "https://raw.githubusercontent.com/SeanGreenbaum/Azure-VMCompute/",
        "templates": {
            "vmURI": "[concat(variables('githubURL'), parameters('CustomBranch'), '/vmdeploy-v2.json')]",
            "azvmURI": "[concat(variables('githubURL'), parameters('CustomBranch'), '/vmazdeploy-v2.json')]",
            "avsvmURI": "[concat(variables('githubURL'), parameters('CustomBranch'), '/vmavsdeploy-v2.json')]",
            "avsURI": "[concat(variables('githubURL'), parameters('CustomBranch'), '/avsetdeploy-v2.json')]"
        },
        "TimeZone": "Eastern Standard Time",
        "vmCount": "[int(parameters('vmCount_str'))]",
        "OperatingSystems":
        {
            "2008-R2-SP1-smalldisk": {
                "vmPublisher": "MicrosoftWindowsServer",
                "vmOffer": "WindowsServer",
                "vmLicense": "Windows_Server"
            },
            "2012-Datacenter-smalldisk": {
                "vmPublisher": "MicrosoftWindowsServer",
                "vmOffer": "WindowsServer",
                "vmLicense": "Windows_Server"
            },
            "2012-R2-Datacenter-smalldisk-g2": {
                "vmPublisher": "MicrosoftWindowsServer",
                "vmOffer": "WindowsServer",
                "vmLicense": "Windows_Server"
            },
            "2016-Datacenter-smalldisk": {
                "vmPublisher": "MicrosoftWindowsServer",
                "vmOffer": "WindowsServer",
                "vmLicense": "Windows_Server"
            },
            "2016-datacenter-smalldisk-g2": {
                "vmPublisher": "MicrosoftWindowsServer",
                "vmOffer": "WindowsServer",
                "vmLicense": "Windows_Server"
            },
            "2016-Datacenter-Server-Core-smalldisk-g2": {
                "vmPublisher": "MicrosoftWindowsServer",
                "vmOffer": "WindowsServer",
                "vmLicense": "Windows_Server"
            },
            "2019-Datacenter-smalldisk": {
                "vmPublisher": "MicrosoftWindowsServer",
                "vmOffer": "WindowsServer",
                "vmLicense": "Windows_Server"
            },
            "2019-Datacenter-smalldisk-g2": {
                "vmPublisher": "MicrosoftWindowsServer",
                "vmOffer": "WindowsServer",
                "vmLicense": "Windows_Server"
            },
            "2019-Datacenter-Core-smalldisk-g2": {
                "vmPublisher": "MicrosoftWindowsServer",
                "vmOffer": "WindowsServer",
                "vmLicense": "Windows_Server"
            },
            "2022-datacenter-smalldisk-g2": {
                "vmPublisher": "MicrosoftWindowsServer",
                "vmOffer": "WindowsServer",
                "vmLicense": "Windows_Server"
            },
            "win11-21h2-ent": {
                "vmPublisher": "MicrosoftWindowsDesktop",
                "vmOffer": "Windows-11",
                "vmLicense": "Windows_Client"
            },
            "20h2-ent-g2": {
                "vmPublisher": "MicrosoftWindowsDesktop",
                "vmOffer": "Windows-10",
                "vmLicense": "Windows_Client"
            },
            "20h1-ent-g2": {
                "vmPublisher": "MicrosoftWindowsDesktop",
                "vmOffer": "Windows-10",
                "vmLicense": "Windows_Client"
            },
            "19h2-ent-g2": {
                "vmPublisher": "MicrosoftWindowsDesktop",
                "vmOffer": "Windows-10",
                "vmLicense": "Windows_Client"
            },
            "rs5-enterprise-g2": {
                "vmPublisher": "MicrosoftWindowsDesktop",
                "vmOffer": "Windows-10",
                "vmLicense": "Windows_Client"
            },
            "rs3-pro": {
                "vmPublisher": "MicrosoftWindowsDesktop",
                "vmOffer": "Windows-10",
                "vmLicense": "Windows_Client"
            },
            "win7-enterprise": {
                "vmPublisher": "MicrosoftWindowsDesktop",
                "vmOffer": "Windows-7",
                "vmLicense": "Windows_Client"
            }
        }
    },
    "resources": [
        {
            "condition": "[equals(parameters('NeedsHA'), 'No')]",
            "apiVersion": "2021-04-01",
            "name": "[if(equals(variables('vmCount'), 1), concat('linked-vm-', parameters('vmName')), concat('linked-vm-', parameters('vmName'), copyIndex(1)))]",
            "type": "Microsoft.Resources/deployments",
            "copy": {
                "name": "vmloop",
                "count": "[variables('vmCount')]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').vmURI]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[if(equals(variables('vmCount'), 1), parameters('vmName'), concat(parameters('vmName'), copyIndex(1)))]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "vmOS": {
                        "value": "[parameters('vmOS')]"
                    },
                    "vmOSversion": {
                        "value": "[parameters('vmOSversion')]"
                    },
                    "vmPublisher": {
                        "value": "[variables('OperatingSystems')[parameters('vmOS')].vmPublisher]"
                    },
                    "vmOffer": {
                        "value": "[variables('OperatingSystems')[parameters('vmOS')].vmOffer]"
                    },
                    "subnetRef": {
                        "value": "[variables('subnetRef')]"
                    },
                    "acceleratedNetworking": {
                        "value": "[parameters('acceleratedNetworking')]"
                    },
                    "storageType": {
                        "value": "[parameters('storageType')]"
                    },
                    "autoShutdownTime": {
                        "value": "[parameters('autoShutdownTime')]"
                    },
                    "licensetype": {
                        "value": "[variables('OperatingSystems')[parameters('vmOS')].vmLicense]"
                    },
                    "timeZone": {
                        "value": "[variables('timeZone')]"
                    },
                    "DomainJoin": {
                        "value": "[parameters('DomainJoin')]"
                    },
                    "DomainToJoin": {
                        "value": "[parameters('DomainToJoin')]"
                    },
                    "DomainJoinUserName": {
                        "value": "[parameters('DomainJoinUserName')]"
                    },
                    "DomainJoinPassword": {
                        "value": "[parameters('DomainJoinPassword')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "condition": "[equals(parameters('NeedsHA'), 'AvailabilityZone')]",
            "apiVersion": "2021-04-01",
            "name": "[if(equals(variables('vmCount'), 1), concat('linked-vmaz-', parameters('vmName')), concat('linked-vmaz-', parameters('vmName'), copyIndex(1)))]",
            "type": "Microsoft.Resources/deployments",
            "copy": {
                "name": "vmloop",
                "count": "[variables('vmCount')]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').azvmURI]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[if(equals(variables('vmCount'), 1), parameters('vmName'), concat(parameters('vmName'), copyIndex(1)))]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "vmOS": {
                        "value": "[parameters('vmOS')]"
                    },
                    "vmOSversion": {
                        "value": "[parameters('vmOSversion')]"
                    },
                    "vmPublisher": {
                        "value": "[variables('OperatingSystems')[parameters('vmOS')].vmPublisher]"
                    },
                    "vmOffer": {
                        "value": "[variables('OperatingSystems')[parameters('vmOS')].vmOffer]"
                    },
                    "subnetRef": {
                        "value": "[variables('subnetRef')]"
                    },
                    "acceleratedNetworking": {
                        "value": "[parameters('acceleratedNetworking')]"
                    },
                    "storageType": {
                        "value": "[parameters('storageType')]"
                    },
                    "autoShutdownTime": {
                        "value": "[parameters('autoShutdownTime')]"
                    },
                    "licensetype": {
                        "value": "[variables('OperatingSystems')[parameters('vmOS')].vmLicense]"
                    },
                    "timeZone": {
                        "value": "[variables('timeZone')]"
                    },
                    "AzZone": {
                        "value": "[parameters('AvailabilityZone')]"
                    },
                    "DomainJoin": {
                        "value": "[parameters('DomainJoin')]"
                    },
                    "DomainToJoin": {
                        "value": "[parameters('DomainToJoin')]"
                    },
                    "DomainJoinUserName": {
                        "value": "[parameters('DomainJoinUserName')]"
                    },
                    "DomainJoinPassword": {
                        "value": "[parameters('DomainJoinPassword')]"
                    }
                }
            },
            "dependsOn": []
        },
        {
            "condition": "[equals(parameters('NeedsHA'), 'AvailabilitySet')]",
            "apiVersion": "2021-04-01",
            "name": "[if(equals(variables('vmCount'), 1), concat('linked-vmavs-', parameters('vmName')), concat('linked-vmavs-', parameters('vmName'), copyIndex(1)))]",
            "type": "Microsoft.Resources/deployments",
            "copy": {
                "name": "vmloop",
                "count": "[variables('vmCount')]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').avsvmURI]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[if(equals(variables('vmCount'), 1), parameters('vmName'), concat(parameters('vmName'), copyIndex(1)))]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "vmOS": {
                        "value": "[parameters('vmOS')]"
                    },
                    "vmOSversion": {
                        "value": "[parameters('vmOSversion')]"
                    },
                    "vmPublisher": {
                        "value": "[variables('OperatingSystems')[parameters('vmOS')].vmPublisher]"
                    },
                    "vmOffer": {
                        "value": "[variables('OperatingSystems')[parameters('vmOS')].vmOffer]"
                    },
                    "subnetRef": {
                        "value": "[variables('subnetRef')]"
                    },
                    "acceleratedNetworking": {
                        "value": "[parameters('acceleratedNetworking')]"
                    },
                    "storageType": {
                        "value": "[parameters('storageType')]"
                    },
                    "autoShutdownTime": {
                        "value": "[parameters('autoShutdownTime')]"
                    },
                    "avSetName": {
                        "value": "[parameters('AVSetName')]"
                    },
                    "licensetype": {
                        "value": "[variables('OperatingSystems')[parameters('vmOS')].vmLicense]"
                    },
                    "timeZone": {
                        "value": "[variables('timeZone')]"
                    },
                    "DomainJoin": {
                        "value": "[parameters('DomainJoin')]"
                    },
                    "DomainToJoin": {
                        "value": "[parameters('DomainToJoin')]"
                    },
                    "DomainJoinUserName": {
                        "value": "[parameters('DomainJoinUserName')]"
                    },
                    "DomainJoinPassword": {
                        "value": "[parameters('DomainJoinPassword')]"
                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'linked-avset')]"
            ]
        },
        {
            "condition": "[equals(parameters('AVSetAction'), 'New')]",
            "apiVersion": "2021-04-01",
            "name": "linked-avset",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templates').avsURI]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "localavSetName": {
                        "value": "[parameters('AVSetName')]"
                    }
                }
            },
            "dependsOn": []
        }
    ],
    "outputs": {}
}