{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "AzureAdmin"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "vmSize": {
      "type": "string"
    },
    "vmOS": {
      "type": "string"
    },
    "vmOSversion":{
      "type": "string",
      "defaultValue": "latest"
    },
    "vmPublisher":{
      "type": "string",
      "defaultValue": "MicrosoftWindowsServer"
    },
    "vmOffer":{
      "type": "string",
      "defaultValue": "WindowsServer"
    },
   	"subnetRef": {
  	  "type": "string"
  	},
    "acceleratedNetworking": {
	    "type": "bool"
	  },
    "storageType": {
      "type": "string"
    },
    "autoShutdownTime": {
      "type": "string"
    },
    "licensetype": {
      "type": "string"
    },
    "timeZone": {
      "type": "string",
      "defaultValue": "Eastern Standard Time"
    },
    "AzZone": {
      "type": "string",
      "defaultValue": "1"
    },
    "DomainJoin": {
      "type": "string",
      "defaultValue": "No"
    },
    "DomainToJoin": {
      "type": "string",
      "defaultValue": "No"
    },
    "DomainJoinUserName": {
      "type": "string",
      "defaultValue": "None"
    },
    "DomainJoinPassword": {
      "type": "securestring",
      "defaultValue": "None"
    },
    "CustomBranch": {
      "type": "string",
      "defaultValue": "master",
      "metadata": {
        "description": "Advanced option. Do not change unless intentional."
      }
    }
  },
  "variables": {
    "osDiskName": "[concat(parameters('vmName'),'_OSDisk')]",
    "nicName": "[concat(parameters('vmName'), '_Nic')]",
    "githubURL": "https://raw.githubusercontent.com/SeanGreenbaum/Azure-VMCompute/",    
    "nictemplateURI": "[concat(variables('githubURL'), parameters('CustomBranch'), '/nicdeploy.json')]"
  },
  "resources": [
    {
      "apiVersion": "2021-04-01",
      "name": "[concat('linked-nic-', parameters('vmName'))]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[variables('nictemplateURI')]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "nicName": {
                  "value": "[variables('nicName')]"
              },
              "subnetRef": {
                  "value": "[parameters('subnetRef')]"
              },
              "acceleratedNetworking": {
                  "value": "[parameters('acceleratedNetworking')]"
              }
          }
      },
      "dependsOn": []
    },
    {
      "name": "[parameters('vmName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2021-07-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "AutoShutDownTime": "[parameters('autoShutdownTime')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', concat('linked-nic-', parameters('vmName')))]"
      ],
      "properties": {
        "licenseType": "[parameters('licensetype')]",
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": true,
            "timeZone": "[parameters('timeZone')]",
            "enableAutomaticUpdates": true
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('vmPublisher')]",
            "offer": "[parameters('vmOffer')]",
            "sku": "[parameters('vmOS')]",
            "version": "[parameters('vmOSversion')]"
          },
          "osDisk": {
            "name": "[variables('osDiskName')]",
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[parameters('storageType')]"
            }
          }
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            }
          ]
        }
      },
      "zones": [
        "[parameters('AzZone')]"
      ]
    },
    {
      "condition": "[equals(parameters('DomainJoin'), 'Yes')]",
      "apiVersion": "2021-03-01",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/joindomain')]",
      "location": "[resourceGroup().location]",      
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainToJoin')]",
          "User": "[parameters('DomainJoinUserName')]",
          "Restart": "true",
          "Options": 3
        },
        "protectedSettings": {
          "Password": "[parameters('DomainJoinPassword')]"
        }
      }
    }
  ],
  "outputs": {}
}
