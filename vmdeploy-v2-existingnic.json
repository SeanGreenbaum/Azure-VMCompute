{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "vmSize": {
      "type": "string"
    },
    "datadiskcount": {
      "type": "int",
      "defaultValue": 0
    },
    "datadiskcaching": {
      "type": "string",
      "defaultValue" : "None",
      "allowedValues": [
        "None",
        "ReadWrite",
        "ReadOnly"
      ]
    },
    "datadisksize": {
      "type": "int",
      "defaultValue": 31
    },
    "vmOS": {
      "type": "string"
    },
    "vmOSversion":{
      "type": "string",
      "defaultValue": "latest"
    },
    "vmPublisher":{
      "type": "string",
      "defaultValue": "MicrosoftWindowsServer"
    },
    "vmOffer":{
      "type": "string",
      "defaultValue": "WindowsServer"
    },
    "storageType": {
      "type": "string"
    },
    "autoShutdownTime": {
      "type": "string"
    },
    "licensetype": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "AzureAdmin"
    },
    "timeZone": {
      "type": "string",
      "defaultValue": "Eastern Standard Time"
    },
    "DomainJoin": {
      "type": "string",
      "defaultValue": "No"
    },
    "DomainToJoin": {
      "type": "string",
      "defaultValue": "No"
    },
    "DomainJoinUserName": {
      "type": "string",
      "defaultValue": "None"
    },
    "DomainJoinPassword": {
      "type": "securestring",
      "defaultValue": "None"
    }
  },
  "variables": {
    "osDiskName": "[concat(parameters('vmName'),'_OSDisk')]",
    "nicName": "[concat(parameters('vmName'), '_Nic')]"
  },
  "resources": [
    {
      "name": "[parameters('vmName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2021-07-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "AutoShutDownTime": "[parameters('autoShutdownTime')]"
      },
      "dependsOn": [],
      "properties": {
        "licenseType": "[parameters('licensetype')]",
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": true,
            "timeZone": "[parameters('timeZone')]",
            "enableAutomaticUpdates": true
          }
        },
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[parameters('vmPublisher')]",
            "offer": "[parameters('vmOffer')]",
            "sku": "[parameters('vmOS')]",
            "version": "[parameters('vmOSversion')]"
          },
          "osDisk": {
            "name": "[variables('osDiskName')]",
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[parameters('storageType')]"
            }
          },
          "copy": [
            {
              "name": "dataDisks",
              "count": "[parameters('datadiskcount')]",
              "input": {
                "caching": "[parameters('datadiskcaching')]",
                "diskSizeGB": "[parameters('datadisksize')]",
                "lun": "[copyIndex('dataDisks')]",
                "name": "[concat(parameters('vmName'), '_datadisk', copyIndex('dataDisks'))]",
                "createOption": "Empty",
                "managedDisk": {
                  "storageAccountType": "[parameters('storageType')]"
                }
              }
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            }
          ]
        }
      }
    },
    {
      "condition": "[equals(parameters('DomainJoin'), 'Yes')]",
      "apiVersion": "2021-03-01",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/joindomain')]",
      "location": "[resourceGroup().location]",      
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainToJoin')]",
          "User": "[parameters('DomainJoinUserName')]",
          "Restart": "true",
          "Options": 3
        },
        "protectedSettings": {
          "Password": "[parameters('DomainJoinPassword')]"
        }
      }
    }
  ],
  "outputs": {}
}
